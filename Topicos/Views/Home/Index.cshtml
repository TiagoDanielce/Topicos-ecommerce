@model IEnumerable<Topicos.Models.ProdutoModel>

@{
    Html.RenderPartial("MainHeader");
}
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <div class="aside">
                    <h3 class="aside-title">Categorias</h3>
                    <div class="checkbox-filter">

                        @foreach (var item in ViewBag.Categorias)
                        {
                            <div class="input-checkbox">
                                <input type="checkbox" id="@item.Nome">
                                <label for="@item.Nome">
                                    <span></span>
                                    @item.Nome
                                    <small>(@item.Qtde)</small>
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /ASIDE -->
            <!-- STORE -->
            <div id="store" class="col-md-9">
                <div class="row">
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-md-4 col-xs-6">
                                <div class="product">
                                    <div class="product-img">
                                        <img src="~/Images/Produtos/@(item.Id)_1.jpg" alt="" />
                                        <div class="product-label">
                                            @*<span class="sale">-30%</span>*@
                                            <span class="new">NEW</span>
                                        </div>
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@item.Categoria</p>
                                        <h3 class="product-name">
                                            @Html.ActionLink(item.Titulo, "Details", "Produto", new { id = item.Id }, null)
                                        </h3>
                                        <h4 class="product-price">R$ @item.Preco @*<del class="product-old-price">R$ @item.Preco</del>*@</h4>
                                        <div class="product-rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                        @*<div class="product-btns">
                                                <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                                <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
                                                <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
                                            </div>*@
                                    </div>
                                    <div class="add-to-cart">
                                        <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Add Carrinho</button>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix visible-sm visible-xs"></div>
                        }
                    }
                    else
                    {
                        <p>Nenhum Produto encontrado!</p>
                    }
                    <div class="clearfix visible-lg visible-md"></div>
                </div>
            </div>
            <!-- /STORE -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
