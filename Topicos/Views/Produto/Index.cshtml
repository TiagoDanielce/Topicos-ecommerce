@model IEnumerable<Topicos.Models.ProdutoModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <h1 style="text-align:center;">Produtos Cadastrados</h1>
    <hr />
    <div style="float:right;">
        @Html.ActionLink("Adicionar Novo", "Edit", "", new { @class = "btn btn-success" })
    </div>
    <br />
    <br />
    <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%" style="text-align:center;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                Ações
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    R$ @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @*@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })*@
                    @*@Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })*@
                    @using (Html.BeginForm("Delete","Produto", method: FormMethod.Post))
                    {
                        <div class="form-actions">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                            <input type="hidden" value="@item.Id" name="id" />
                            <input type="submit" value="Excluir" class="btn btn-danger" />
                        </div>
                    }

                </td>
            </tr>
        }

    </table>
</div>

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/buttons/1.1.0/css/buttons.dataTables.min.css">

<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>